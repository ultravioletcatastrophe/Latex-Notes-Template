%need to define definition environment manually first so there's something to set the counter from for everything else

\newcommand{\wraptheorem}[4]{%
    \newtcbtheorem[use counter from=olddefinition]{old#1}{\vphantom{Apgjy}#2}{breakable, %the \vphantom is to make the label border boxes all the same size, as long as you don't use the character Ã… or something
    parbox=false,
    sharp corners, 
    skin=enhanced, 
    frame hidden, 
    colback=#3!0, 
    coltitle=white, 
    colbacktitle=#3,
    % titlerule=0mm, %for no gap between title and box
    %before upper={\parindent15pt}, %for paragraph indents in each box
    borderline={.5mm}{0mm}{#3},
    fonttitle=\bfseries
    }{#4}
    \NewDocumentEnvironment{#1}{O{} O{} o}
    {\parindent = 0pt
    \IfNoValueTF{##3}{
    \begin{old#1}{##1}{##2}}
    {\stepcounter{footnote}\marginnote[.9cm]{$^{\arabic{footnote}}$\,\handcite{##3}}\begin{old#1}{##1$^{\arabic{footnote}}$}{##2}}}
    {\end{old#1}}

    \NewDocumentEnvironment{#1*}{O{} o}
    {\parindent = 0pt
    \IfNoValueTF{##2}{
    \begin{old#1*}{##1}}
    {\stepcounter{footnote}\marginnote[.9cm]{$^{\arabic{footnote}}$\,\handcite{##2}}\begin{old#1*}{##1$^{\arabic{footnote}}$}}}
    {\end{old#1*}} %extends the wraptheorem function to include the starred (unnumbered) versions of the new theorem styles that are automatically created by the tcolorbox package
}

